#!/bin/bash

api_pokemons() {
  curl -s "https://pokeapi.co/api/v2/pokemon/?offset=20&limit=20"
}

api_pokemon() {
  curl -s "https://pokeapi.co/api/v2/pokemon/$1"
}

api_pokemon_location() {
  curl -s "https://pokeapi.co/api/v2/location/"
}

api_pokemon_item() {
  curl -s "https://pokeapi.co/api/v2/item/"
}

api_pokemon_machine() {
  curl -s "https://pokeapi.co/api/v2/machine/"
}

api_pokemon_move() {
  curl -s "https://pokeapi.co/api/v2/move/"
}

api_pokemon_berry() {
  curl -s "https://pokeapi.co/api/v2/berry/"
}

api_pokemon_gql() {
  curl 'https://beta.pokeapi.co/graphql/v1beta' \
    -H 'content-type: application/json' \
    -H 'accept: */*' \
    --compressed \
    --data-binary @- <<EOF
{
    "query": "query getItems{pokemon_v2_item{name,cost}}",
    "variables": null,
    "operationName":"getItems"
}
EOF
}
