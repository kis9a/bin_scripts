#!/bin/bash

# bash version
# GNU bash, version 5.1.16(1)-release (x86_64-apple-darwin21.1.0)

readonly cf="\\033[0m"
readonly red="\\033[0;31m"
readonly green="\\033[0;32m"

assert_equal() {
  if [ "$1" != "$2" ]; then
    echo "expected: $1"
    echo "actual:   $2"
    return 1
  fi
}

test_err() {
  echo -e "${red}❌${cf} $1" 1>&2
}

test_suc() {
  echo -e "${green}✓ ${cf} $1" 1>&2
}

basename_bash() {
  local tmp
  tmp=${1%"${1##*[!/]}"}
  tmp=${tmp##*/}
  tmp=${tmp%"${2/"$tmp"/}"}
  printf '%s\n' "${tmp:-/}"
}

run_test() {
  test_basename "a/bc/d" "d"
  test_basename "a/bc/" "bc"
  test_basename "//////////a/bc/" "bc"
  test_basename "a/bc/d///////////////" "d"
  test_basename "a/bc/d//あ" "あ"
}

# arg, expected
test_basename() {
  if assert_equal "$(basename_bash "$1")" "$2"; then
    test_suc "test_basename: $1"
  else
    test_err "test_basename: $1"
  fi
}

run_test "$@"
